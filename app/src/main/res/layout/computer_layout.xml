<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*">


    <TableRow>

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_span="4"
            android:padding="30dp"
            android:layout_margin="10dp"
            android:text=""
            android:textSize="45sp" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/btn_clear"
            style="@style/computer_btn"
            android:text="C" />

        <Button
            android:id="@+id/btn_back"
            style="@style/computer_btn"
            android:text="◀" />

        <Button
            android:id="@+id/btn_plus"
            style="@style/computer_btn"
            android:text="+" />

        <Button
            android:id="@+id/btn_subtract"
            style="@style/computer_btn"
            android:text="-" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn_7"
            style="@style/computer_btn"
            android:text="7" />

        <Button
            android:id="@+id/btn_8"
            style="@style/computer_btn"
            android:text="8" />

        <Button
            android:id="@+id/btn_9"
            style="@style/computer_btn"
            android:text="9" />

        <Button
            android:id="@+id/btn_multiply"
            style="@style/computer_btn"
            android:text="x" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn_6"
            style="@style/computer_btn"
            android:text="6" />

        <Button
            android:id="@+id/btn_5"
            style="@style/computer_btn"
            android:text="5" />

        <Button
            android:id="@+id/btn_4"
            style="@style/computer_btn"
            android:text="4" />

        <Button
            android:id="@+id/btn_divide"
            style="@style/computer_btn"
            android:text="÷" />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn_3"
            style="@style/computer_btn"
            android:text="3" />

        <Button
            android:id="@+id/btn_2"
            style="@style/computer_btn"
            android:text="2" />

        <Button
            android:id="@+id/btn_1"
            style="@style/computer_btn"
            android:text="1" />

        <Button
            android:id="@+id/btn_dot"
            style="@style/computer_btn"
            android:text="." />
    </TableRow>
    <TableRow>

        <Button
            android:id="@+id/btn_0"
            style="@style/computer_btn"
            android:layout_span="2"
            android:text="0" />

        <Button
            android:id="@+id/btn_result"
            style="@style/computer_btn"
            android:layout_span="2"
            android:text="=" />


    </TableRow>

</TableLayout>